  // Helper function to render list items
  function createListHtml(items) {
    return items.map(item => `<li>${item}</li>`).join("");
  }

  // Toggle language on button click
  langBtn.addEventListener("click", () => {
    isEnglish = !isEnglish;

    const lang = isEnglish ? "english" : "spanish";

    // Update main text
    document.querySelector("h1").textContent = content[lang].heading;
    document.querySelector(".text1").innerHTML = content[lang].about;

    // Update each point section
    const pointDivs = document.querySelectorAll(".point");
    const topics = ["education", "taxes", "health", "safety"];
    topics.forEach((topic, index) => {
      const [title, items] = content[lang].points[topic];
      pointDivs[index].querySelector(".point_title").textContent = title;
      pointDivs[index].querySelector("ul").innerHTML = createListHtml(items);
    });

    // Update donate button and text
    document.getElementById("donate-btn").textContent = content[lang].footer.donateButton;
    document.getElementById("donate-btn").href = isEnglish
